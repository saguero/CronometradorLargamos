<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:columnCount="3"
    android:layout_margin="5dp">

    <Button
        android:id="@+id/keyboard_n7"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/number_7"
        android:textColor="@android:color/white"
        android:textSize="@dimen/number_size_land"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>

    <Button
        android:id="@+id/keyboard_n8"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:layout_marginRight="5dp"
        android:text="@string/number_8"
        android:textColor="@android:color/white"
        android:textSize="@dimen/number_size_land"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>

    <Button
        android:id="@+id/keyboard_n9"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:layout_marginRight="5dp"
        android:text="@string/number_9"
        android:textColor="@android:color/white"
        android:textSize="@dimen/number_size_land"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>

    <!-- Fin primera fila -->

    <Button
        android:id="@+id/keyboard_n4"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:layout_marginBottom="5dp"
        android:text="@string/number_4"
        android:textColor="@android:color/white"
        android:textSize="@dimen/number_size_land"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>

    <Button
        android:id="@+id/keyboard_n5"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:text="@string/number_5"
        android:textColor="@android:color/white"
        android:textSize="@dimen/number_size_land"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>

    <Button
        android:id="@+id/keyboard_n6"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:text="@string/number_6"
        android:textColor="@android:color/white"
        android:textSize="@dimen/number_size_land"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>



    <!-- Fin segunda Fila -->

    <Button
        android:id="@+id/keyboard_n1"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:layout_marginBottom="5dp"
        android:text="@string/number_1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/number_size_land"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>

    <Button
        android:id="@+id/keyboard_n2"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:text="@string/number_2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/number_size_land"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>

    <!-- Fin segunda columna -->

    <Button
        android:id="@+id/keyboard_n3"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:text="@string/number_3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/number_size_land"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>

    <!-- Fin tercera Fila -->

    <Button
        android:id="@+id/keyboard_lock"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:layout_marginBottom="5dp"
        android:text="@string/lock"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:tint="@android:color/white"
        android:background="@color/key"/>

    <Button
        android:id="@+id/keyboard_n0"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"

        android:text="@string/number_0"
        android:textColor="@android:color/white"
        android:textSize="@dimen/number_size_land"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>

    <ImageButton
        android:id="@+id/keyboard_error"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:src="@mipmap/ic_error"
        android:background="@drawable/keyboard_background"
        android:tint="@color/white"/>

    <ImageButton
        android:id="@+id/keyboard_supr"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:src="@mipmap/ic_supr"
        android:background="@drawable/keyboard_background"
        android:tint="@android:color/white"/>

    <ImageButton
        android:id="@+id/keyboard_supr_all"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:src="@mipmap/ic_supr_all"
        android:tint="@color/white"
        android:background="@drawable/keyboard_background"/>

    <Button
        android:id="@+id/keyboard_enter"
        android:layout_width="@dimen/number_width_land"
        android:layout_height="@dimen/number_height_land"
        android:text="@string/enter"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/keyboard_background"/>

    <!-- Fin tercera columna -->


</GridLayout>
